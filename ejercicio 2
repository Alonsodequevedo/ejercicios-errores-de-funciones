#include <stdio.h>



float perimetroFigura(float num)
{
    float perimetro;
    perimetro = 4 * num;
    return perimetro;
}

float areaFigura(float num)
{
    float area;
    area = num * num;
    return area;
}

int main()
{
    float lado, perimetro, area;
    printf("Lado de un cuadrado: ");
    scanf("%f", &lado);

    perimetro = perimetroFigura(lado);
    area = areaFigura(lado);

    printf("El perimetro es: %f\n", perimetro);
    printf("El area es: %f\n", area);

    return 0;
}
